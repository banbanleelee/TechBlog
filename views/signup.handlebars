<div class='columns'>
  <form class='column signup-form'>
    <div class='field'>
      <p class='control'>
        <input class='input' type='name' id='name-signup' placeholder='Name' />
      </p>
    </div>
    <div class='field'>
      <p class='control'>
        <input
          class='input'
          id='email-signup'
          type='email'
          placeholder='Email'
        />
      </p>
    </div>
    <div class='field'>
      <p>
        <input
          class='input'
          id='password-signup'
          type='password'
          placeholder='Password'
        />
      </p>
    </div>
    <div class='field'>
      <p>
        <button class='btn btn-secondary'>
          Sign Up
        </button>
      </p>
    </div>
  </form>
</div>
<script src='./js/signup.js'></script>