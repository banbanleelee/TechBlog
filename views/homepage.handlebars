<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
  <div class='post'>
    <div class='center'><a
            href='/post/{{post.id}}'
            
          >
      <div class='card'>
        <h2 class='card-header'>
          {{post.title}}
        </h2>
        <div class='card-body'>
          <p>Posted by
            {{post.user.name}}
            on
            {{format_date post.date_created}}</p>
        </div>
      </div>
    </div></a>
  </div>
{{/each}}